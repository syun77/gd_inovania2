#       実体は $FallingFloorBody
# =============================================
class_name FallingFloor

# ---------------------------------------------
# const.
# ---------------------------------------------

# ---------------------------------------------
# onready.
# ---------------------------------------------
@onready var _floor = $FallingFloorBody

# ---------------------------------------------
# var.
# ---------------------------------------------

# ---------------------------------------------
# public functions.
# ---------------------------------------------

# ---------------------------------------------
# private functions.
# ---------------------------------------------
## 更新.
func _physics_process(_delta: float) -> void:
	if _floor.is_hide():
		# 隠れたら初期位置に出現させる
		_floor.appear(Vector2.ZERO)
